    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    '//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-N6WZ9N');</script>
    <!-- End Google Tag Manager -->
        
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{ html.csrfMetaTags | raw }}
    <title>ОСАГО</title>
    <meta name="google-site-verification" content="i4TVEdFyIoYHFjYx4vzJ_ywSn3okQfxEDd5iYN8JVsw" />
{#        <link rel="shortcut icon" href="/app/web/favicon.ico" type="image/x-icon" />#}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {{  this.head  }}
</head>
<body>
    {{ this.beginBody }}
    
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="//www.googletagmanager.com/ns.html?id=GTM-N6WZ9N"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
	<header class="b-header" id="header">
        <div class="b-container_wide b-container_header">
            <a class="b-logo__link">
                <img src="{{ Url.to('app/web/img/logo.svg') }}" alt="OH.UA лого" class="b-logo">
            </a>
            <span class="b-header__address">Украина, г. Киев, ул. Пушкинская, 9</span>
            <a href="tel:{{ this.params.partner_phone | replace({' ' : '', '(' : '', ')' : '', '-' : ''}) }}" 
               class="b-header__link b-header__link_phone">
                <span class="b-icon_phone"></span>
                &nbsp;&nbsp; {{ this.params.partner_phone }}
            </a>
            <a href="mailto:{{ this.params.partner_email }}" class="b-header__link b-header__link_email">
                <span class="fa fa-envelope-open-o" aria-hidden="true"></span>
                &nbsp;&nbsp;{{ this.params.partner_email }}
            </a>
            <button class="b-header__btn" id="callbackBtn">Обратный звонок</button>
        </div>
	</header>
                
    {{ content | raw }}
    
    <footer class="b-footer">
        <div class="b-footer__toTop" id="toTop">
            <span class="b-heading_toTop">Наверх&nbsp;</span>
            <a href="#header" class="b-btn_toTop">
                <span class="fa fa-arrow-up" aria-hidden="true"></span>
            </a>
        </div>
        <div class="b-container">
            <div class="b-container_footer">
                <img src="{{ Url.to('app/web/img/ewa.png') }}" alt="EWA" class="b-logo_ewa">
                <p class="b-footer__pay">
                   Мы принимаем:<br>
                   <span class="fa fa-cc-visa" aria-hidden="true"></span>
                   <span class="fa fa-cc-mastercard" aria-hidden="true"></span>
                   <span class="fa fa-cc-paypal" aria-hidden="true"></span>
                </p>
            </div>
        </div>
    </footer>
    
<!-- MODALS -->
    <div class="b-overlay_modal">
        <div class="b-modal b-modal_callback b-gradient_bg">
            <div class="b-modal__btn_close">
                <span class="fa fa-times" aria-hidden="true"></span>
            </div>
            <div class="b-modal__heading">Введите ваш<br>номер телефона и мы<br>вам перезвоним</div>
                <form class="b-modal__form_callback b-form_feedback js-form_callback">
                    <input type="tel" name="phone" required pattern="[0-9()\s+-]{19}">
                    <input type="hidden" name="{{ app.request.csrfParam }}" value="{{ app.request.csrfToken }}"> 
                    <button type="submit" class="b-form__submit_feedback b-form__submit_vehicle">
                        <span class="b-text_btn">Перезвонить</span><span class="fa fa-phone" aria-hidden="true"></span>
                    </button>
                </form>
        </div>
        <div class="b-modal b-modal_callbackSuccess b-gradient_bg">
            <div class="b-modal__btn_close">
                <span class="fa fa-times" aria-hidden="true"></span>
            </div>
            <div class="b-modal__heading">Спасибо, мы перезвоним вам на протяжении 5 минут.</div>
        </div>
        
        <div class="b-modal b-modal_feedbackSuccess b-gradient_bg">
            <div class="b-modal__btn_close">
                <span class="fa fa-times" aria-hidden="true"></span>
            </div>
            <div class="b-modal__heading">Спасибо, ваш отзыв принят.</div>
        </div>
        
        <div class="b-modal b-modal_error b-gradient_bg">
            <div class="b-modal__btn_close">
                <span class="fa fa-times" aria-hidden="true"></span>
            </div>
            <div class="b-modal__heading">Ошибка, попробуйте еще раз.</div>
        </div>
    </div>
<!-- MODALS END -->

<!--    HIDDEN BLOCK FOR RESPONSES SLIDER-->
    <div class="hidden" style="display:none" id="slides">
        
    {% if this.params.feedbacks %}
        {% for feedback in this.params.feedbacks %}
            <div class="b-slide__wrap">
                <div class="b-slide__heading">{{ feedback.username }}</div>
                <div class="b-slide__content">
                    <p class="b-slide__response">{{ feedback.text }}</p>
                    <div class="b-slide__aside_marks">
                        <div class="b-mark__heading">Качество сервиса </div>
                        <div class="b-mark__num">{{ feedback.level_service }}/10</div>
                        <div class="b-mark__heading">Уровень цен </div>
                        <div class="b-mark__num">{{ feedback.level_price }}/10</div>
                        <div class="b-mark__heading">Выбор компаний </div>
                        <div class="b-mark__num">{{ feedback.level_companies }}/10</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
        
    </div>
<!--   /HIDDEN BLOCK FOR RESPONSES SLIDER-->

{{ this.endBody }}
</body>
</html>
{{ this.endPage }}